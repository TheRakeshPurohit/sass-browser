{
  "extends": [
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "one-var": ["off"],
    "indent": ["error", 2],
    "no-trailing-spaces": ["warn"],
    "no-multiple-empty-lines": ["warn", { "max": 1, "maxEOF": 1 }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "no-new": "off",
    "comma-dangle": "off",
    "no-unused-expressions": ["off"],
    "no-extra-parens": ["off"]
  }
}
